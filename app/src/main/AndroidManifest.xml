<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chitchat">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".ChitChatApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChitChatApp">
        <activity android:name=".ui.GroupChatRoomActivity"
            android:theme="@style/Theme.SecondApp"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.ChatRoomActivity"
            android:theme="@style/Theme.SecondApp"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.groupcreate.GroupChatActivity"
            android:theme="@style/Theme.SecondApp"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.ContactActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SecondApp" />
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SecondApp" />
        <activity
            android:name=".ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SecondApp" />
        <activity
            android:name=".ui.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SecondApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>